    <script>
    // Initialize socket.io connection globally
    const socket = io();
    
    // Listen for new visitor events
    socket.on('new-visitor', function(visitorData) {
        if (visitorData && visitorData.ip) {
            const country = visitorData.country || 'Unknown';
            showToast(`New visitor from ${country}: ${visitorData.ip}`, 'info');
            // Update dashboard if we're on the visitors tab
            if ($('#visitors-tab-pane').hasClass('active')) {
                updateDashboard();
            }
        }
    });
    
