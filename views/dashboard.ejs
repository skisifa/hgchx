    // Function to highlight a visitor row in the table
    function highlightVisitorRow(ip) {
        const row = $(`tr[data-ip="${ip}"]`);
        if (row.length) {
            // Add alert class and remove after 5 seconds
            row.addClass('table-danger');
            setTimeout(() => {
                row.removeClass('table-danger');
            }, 5000);
        }
    }
    
    // Global functions for button onclick handlers
    function setRedirectIp(ip) {
        $('#modalRedirectIpInput').val(ip);
        // Pre-fill with the default redirect URL if available
        if (!$('#modalRedirectUrlInput').val()) {
            $('#modalRedirectUrlInput').val(window.location.origin);
        }
    }
    
    function blockIp(ip) {
        // Show the block IP modal with the IP address
        $('#modalBlockIpInput').val(ip);
        $('#modalBlockRedirectUrlInput').val('https://www.google.com'); // Default redirect URL
        $('#blockIpModal').modal('show');
    }
    
    // Function to handle the block IP with redirect form submission
    function submitBlockIp() {
        const ip = $('#modalBlockIpInput').val();
        const redirectUrl = $('#modalBlockRedirectUrlInput').val();
        
        if (!ip) {
            showToast('IP address is required', 'warning');
            return;
        }
        
        // Send block request to server with redirect URL
        $.ajax({
            url: '/dashboard/block',
            method: 'POST',
            data: { 
                ip: ip, 
                redirectUrl: redirectUrl 
            },
            success: function(response) {
                $('#blockIpModal').modal('hide');
                if (response.success) {
                    showToast(response.message || 'IP blocked successfully', 'success');
                    updateDashboard();
                } else {
                    showToast(response.message || 'Failed to block IP', 'danger');
                }
            },
            error: function() {
                showToast('Failed to block IP', 'danger');
            }
        });
    }
    
    function unblockIp(ip) {
        $.post('/dashboard/unblock', { ip: ip }, function(response) {
            if (response.success) {
                showToast('IP unblocked successfully', 'success');
                updateDashboard();
            } else {
                showToast(response.message || 'Failed to unblock IP', 'danger');
            }
        }).fail(function() {
            showToast('Failed to unblock IP', 'danger');
        });
    }
    
    // Function to refresh the dashboard data
    function updateDashboard() {
        // Reload the visitor data from the server
        $.get('/dashboard/visitors', function(data) {
            if (!data.success) {
                showToast('Failed to fetch visitor data', 'danger');
                return;
            }
            
            // Clear the current visitor table
            $('#visitorTableBody').empty();
            
            // Add each visitor to the table
            if (data.visitors) {
                Object.entries(data.visitors).forEach(function([ip, info]) {
                    addVisitorToTable(ip, info);
                });
                
                // Update visitor counts
                $('#visitorCount').text(data.totalCount || 0);
                $('#onlineCount').text(data.onlineCount || 0);
                
                // Update other stats
                const proxyCount = Object.values(data.visitors).filter(v => v.proxy || v.hosting).length;
                $('#proxyVpn').text(proxyCount);
                
                const botCount = Object.values(data.visitors).filter(v => v.isBot).length;
                $('#botsDetected').text(botCount);
                
                // Show toast notification
                showToast('Dashboard updated successfully', 'success');
            }
        }).fail(function(xhr, status, error) {
            console.error('Error fetching visitor data:', error);
            showToast('Failed to refresh dashboard data: ' + error, 'danger');
        });
    }
    
    // Function to add a visitor to the table
    function addVisitorToTable(ip, info) {
        // Add online/offline status with badge
        const statusBadge = info.isOnline ? 
            '<span class="badge bg-success">Online</span>' : 
            '<span class="badge bg-secondary">Offline</span>';
        
        // Format the date
        const lastSeen = new Date(info.lastRequest).toLocaleString();
        
        // Add proxy/vpn badge if detected
        const proxyBadge = (info.proxy || info.hosting) ? 
            '<span class="badge bg-warning">Proxy/VPN</span>' : 
            '';
        
        // Add bot badge if detected
        const botBadge = info.isBot ? 
            '<span class="badge bg-info">Bot</span>' : 
            '';
        
        // Add country flag if available
        const flagImg = info.countryCode && info.countryCode !== 'XX' ? 
            `<img src="https://flagcdn.com/w40/${info.countryCode.toLowerCase()}" class="country-flag">` : 
            '<i class="bi bi-globe"></i>';
        
        // Country name without flag
        const countryName = info.countryCode ? 
            `${info.country || info.countryCode}` : 
            'Unknown';
        
        // Add blocked badge if blocked
        const blockedBadge = info.isBlocked ? 
            '<span class="badge bg-danger">Blocked</span>' : 
            '';
        
        // Create row
        const row = $('<tr></tr>').attr('data-ip', ip);
        
        // Add cells
        row.append(`
            <td>${ip}</td>
            <td>${statusBadge} ${proxyBadge} ${botBadge} ${blockedBadge}</td>
            <td>${flagImg} ${countryName}</td>
            <td>${info.requestCount || info.visits || 1}</td>
            <td>${lastSeen}</td>
            <td>
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-info" onclick="viewIpDetails('${ip}')"><i class="bi bi-info-circle"></i></button>
                    <button type="button" class="btn btn-primary" onclick="setRedirectIp('${ip}')"><i class="bi bi-arrow-right-circle"></i></button>
                    ${!info.isBlocked ? 
                        `<button type="button" class="btn btn-danger" onclick="blockIp('${ip}')"><i class="bi bi-shield-slash"></i></button>` : 
                        `<button type="button" class="btn btn-success" onclick="unblockIp('${ip}')"><i class="bi bi-shield-check"></i></button>`
                    }
                </div>
            </td>
        `);
        
        // Add to table
        $('#visitorTableBody').append(row);
    }
    
    function viewIpDetails(ip) {
        $('#ipDetailsModalLabel').text('IP Details: ' + ip);
        $('#ipDetailsModalBody').html('<div class="d-flex justify-content-center py-5"><div class="spinner-border" role="status"></div><p class="ms-3 mb-0">Loading...</p></div>');
        $('#ipDetailsModal').modal('show');
        
        $.get('/dashboard/ip/' + ip, function(data) {
            let html = '<div class="row">';
            
            // Left column - Basic info
            html += '<div class="col-md-6">';
            html += '<h5>Basic Information</h5>';
            html += '<table class="table table-sm">';
            html += `<tr><td>IP Address:</td><td>${data.ip}</td></tr>`;
            html += `<tr><td>Status:</td><td>${data.isOnline ? '<span class="badge bg-success">Online</span>' : '<span class="badge bg-secondary">Offline</span>'}</td></tr>`;
            html += `<tr><td>Blocked:</td><td>${data.isBlocked ? '<span class="badge bg-danger">Yes</span>' : '<span class="badge bg-success">No</span>'}</td></tr>`;
            html += `<tr><td>Bot:</td><td>${data.isBot ? '<span class="badge bg-info">Yes</span>' : '<span class="badge bg-success">No</span>'}</td></tr>`;
            html += `<tr><td>Proxy/VPN:</td><td>${data.proxy || data.hosting ? '<span class="badge bg-warning">Yes</span>' : '<span class="badge bg-success">No</span>'}</td></tr>`;
            html += `<tr><td>Current Path:</td><td>${data.lastPath || '/'}</td></tr>`;
            html += `<tr><td>Request Count:</td><td>${data.requestCount || 0}</td></tr>`;
